<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="Timesheet-DAOPU" >
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>com.abbh.timesheet.model.Address</class>
    <class>com.abbh.timesheet.model.Company</class>
    <class>com.abbh.timesheet.model.CompanyGroup</class>
    <class>com.abbh.timesheet.model.CompanyGroupUser</class>
    <class>com.abbh.timesheet.model.Users</class>
    <properties>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value="apple123"/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/time_sheet_db"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
