<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="SecureAuthPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.abbh.authenticator.entity.UserCommunityAudit</class>
    <class>com.abbh.authenticator.entity.UserRoles</class>
    <class>com.abbh.authenticator.entity.UserProfileAudit</class>
    <class>com.abbh.authenticator.entity.UserAddress</class>
    <class>com.abbh.authenticator.entity.Community</class>
    <class>com.abbh.authenticator.entity.UserCommunity</class>
    <class>com.abbh.authenticator.entity.UserLoginIpAudit</class>
    <class>com.abbh.authenticator.entity.UserOldPasswordAudit</class>
    <class>com.abbh.authenticator.entity.UserRolesAudit</class>
    <class>com.abbh.authenticator.entity.UserPhoneAudit</class>
    <class>com.abbh.authenticator.entity.Users</class>
    <class>com.abbh.authenticator.entity.UserAddressAudit</class>
    <class>com.abbh.authenticator.entity.Role</class>
    <class>com.abbh.authenticator.entity.UserPhone</class>
    <class>com.abbh.authenticator.entity.UserLoginLockAudit</class>
    <properties>
      <property name="hibernate.connection.username" value="authenticator"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.password" value="authenticator"/>
      <property name="hibernate.connection.url" value="jdbc:mysql:///authenticator"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
